.header-content .header-content-title {
  font-size: 16px;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: #2a2a2a;
}
.nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 100%;
  background: #fff;
}
.nav-left {
  width: 30%;
  border-right: 0.5px solid #ffffff;
}
.nav-left-item {
  height: 21px;
  line-height: 21px;
  margin-top: 31px;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  font-size: 13px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #2a2a2a;
}
.nav-right {
  width: 70%;
  padding-top: 22px;
}
.nav-right-item {
  width: 100%;
  float: left;
  text-align: left;
  padding: 7px;
  font-size: 13px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #2a2a2a;
  border-bottom: 1px solid #EEEEED;
}
.active {
  color: #42b0ed;
  border-right: 1px solid #42b0ed;
}
.subActive {
  color: #42b0ed;
  border-bottom: 1px solid #42b0ed;
}
.padding {
  height: var(--status-bar-height);
  width: 100%;
  top: 0;
  position: fixed;
  background-color: #F24544;
}
.content {
  width: 100%;
}
.noPadding {
  padding-top: 0;
}

