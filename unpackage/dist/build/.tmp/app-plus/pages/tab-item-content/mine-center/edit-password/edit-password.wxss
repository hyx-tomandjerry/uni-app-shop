uni-page {
  background: #fff;
}
uni-input {
  text-align: right;
}
.header-content {
  padding: 15px 14px;
  border-bottom: 1px solid #EEEEED;
}
.header-content .header-title {
  font-size: 16px;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: #2a2a2a;
}
.header-content .headers-submit {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #42b0ed;
}
.account-content {
  text-align: center;
  width: 100%;
  padding-top: 33px;
  padding-bottom: 32px;
  font-size: 16px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #898888;
}
.form-content .form-content-item {
  padding: 29px 12px 8px 18px;
  border-bottom: 1px solid #EEEEED;
}
.form-content .form-title {
  font-size: 15px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
}
.form-content .pwd-desc {
  font-size: 13px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #898888;
  padding-left: 15px;
  margin-bottom: 2px;
}
.form-content .forget-pwd {
  padding-left: 15px;
  font-size: 13px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #42b0ed;
}

