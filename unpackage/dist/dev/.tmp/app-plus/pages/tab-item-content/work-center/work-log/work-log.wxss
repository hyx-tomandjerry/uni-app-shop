.work-item {
  margin: 13px 10px 0;
  border-radius: 10px;
  padding: 18px 12px 13px 17px;
  background: #fff;
}
.user-info {
  margin-top: 4px;
  margin-bottom: 8px;
}
.user-info .user-name {
  font-size: 15px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #2a2a2a;
}
.user-info .work-date {
  font-size: 13px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #a4a4a4;
}
.work-content {
  margin-bottom: 8px;
}
.work-tag {
  width: 67px;
  padding: 2px 8px 3px 9px;
  background: #f6eefd;
}
.work-tag .tag-name {
  font-size: 10px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #2a2a2a;
}

