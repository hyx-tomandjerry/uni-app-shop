
.radio{
	display: inline-block;
	height: 40rpx;
	line-height: 40rpx;
	padding: 0 22rpx;
	background: #f7f7f7;
	border: 1px solid #c3c3c3;
	border-radius: 15px;
	font-size: 26rpx;
	color: #7d7d7d;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin:4rpx 20rpx ;
}
.radio:not(:last-child){
	 margin: 0 20rpx 0px 0px;
}
.radio-primay{
	 background: #d5e4fd;
	 color: #3c7ef6;
	 border: 1px solid #3c7ef6;
}
.radio-width-default{
	 width: 120rpx;
	 text-align: center;
	 padding: 0;
}

